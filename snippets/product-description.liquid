{%- if section.settings.display_product_values -%}
  <div class="product-bottom--wrapper hidden-tablet-and-up">
                <div class="container">
                    <div class="main-product-values">
                        <div class="product-values-container">
                            <div class="product-values-column">
                                    {% if section.settings.value_image_1 != blank %}
                                        <img src="{{ section.settings.value_image_1 | img_url: 'master' }}" class="product-values-icon">
                                    {% else %}
                                        {%- render 'icon', icon: section.settings.icon_1, stroke_width: 1.5 -%}
                                    {%- endif -%}
                                <div class="product-values-heading" style="color: {{ section.settings.values_heading_color }};">
                                    {{ section.settings.value_title_1 }}
                                </div>
                                <div class="product-values-description">
                                    {{ section.settings.value_description_1 }}
                                </div>
                            </div>
                            <div class="product-values-column">
                                    {% if section.settings.value_image_2 != blank %}
                                        <img src="{{ section.settings.value_image_2 | img_url: 'master' }}" class="product-values-icon">
                                    {% else %}
                                        {%- render 'icon', icon: section.settings.icon_2, stroke_width: 1.5 -%}
                                    {%- endif -%}
                                <div class="product-values-heading" style="color: {{ section.settings.values_heading_color }};">
                                    {{ section.settings.value_title_2 }}
                                </div>
                                <div class="product-values-description">
                                    {{ section.settings.value_description_2 }}
                                </div>
                            </div>
                            <div class="product-values-column">
                                    {% if section.settings.value_image_3 != blank %}
                                        <img src="{{ section.settings.value_image_3 | img_url: 'master' }}" class="product-values-icon">
                                    {% else %}
                                        {%- render 'icon', icon: section.settings.icon_3, stroke_width: 1.5 -%}
                                    {%- endif -%}
                                  <div class="product-values-heading" style="color: {{ section.settings.values_heading_color }};">
                                    {{ section.settings.value_title_3 }}
                                </div>
                                <div class="product-values-description">
                                    {{ section.settings.value_description_3 }}
                                </div>
                            </div>
                            <div class="product-values-column">
                                    {% if section.settings.value_image_4 != blank %}
                                        <img src="{{ section.settings.value_image_4 | img_url: 'master' }}" class="product-values-icon">
                                    {% else %}
                                        {%- render 'icon', icon: section.settings.icon_4, stroke_width: 1.5 -%}
                                    {%- endif -%}
                                <div class="product-values-heading" style="color: {{ section.settings.values_heading_color }};">
                                    {{ section.settings.value_title_4 }}
                                </div>
                                <div class="product-values-description">
                                    {{ section.settings.value_description_4 }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
  </div>
{%- endif -%}

<div class="product-description--wrapper">

          {% assign indic = product.metafields.airf.indic %}
          {% if product.description contains '[Indicações]' %}
            <div class="short-description hidden-tablet-and-up">
              {% assign desc_indic = product.description | split: '[Indicações]' %}
              <a class="accordion">Indicações</a>
              <div class="panel">
                <p>{{ desc_indic[1] }}</p>
              </div>
            </div>
          {% endif %}
          
    <div class="product-description">
      {%- if product.description != blank -%}
        <div class="description-heading">
          <h2 class="heading h3">{{ 'product.general.description' | t }}</h2>
        </div>
        <div class="product-block-list__item product-block-list__item--description">
          {%- if section.settings.content_display_mode == 'show_all_and_expand_description' -%}
            <div class="">
              <div class="rte text--pull">

                {% assign desc_ = product.description | split: '[' %}
                {{ desc_[0] }}

                {% if product.description contains '[Quem pode beneficiar]' %}
                  {% assign desc_benef = product.description | split: '[Quem pode beneficiar]' %}
                  <h3 class="heading h3">Quem pode beneficiar?</h3>
                  <p>{{ desc_benef[1] }}</p>

                {% endif %}

              </div>
            </div>
          {%- else -%}
            <div class="full-description">
              <div class="rte text--pull">
                {{ product.description | split: '[' | first | remove: 'data-section-type="product"' }}
              </div>

              {% comment %}
              <button class="expandable-content__toggle">
                <span class="expandable-content__toggle-icon"></span>
                <span
                  class="expandable-content__toggle-text"
                  data-view-more="{{ 'product.general.view_more' | t | escape }}"
                  data-view-less="{{ 'product.general.view_less' | t | escape }}">{{- 'product.general.view_more' | t -}}</span>
              </button>
              {% endcomment %}

            </div>
          {%- endif -%}
        </div>
        <div class="product-block-list__item product-block-list__item--details">
          {% comment %}
          <div class="details-heading">
            <h3 class="heading h3">INFORMAÇÃO DO PRODUTO</h3>
          </div>
          {% endcomment %}
          <div class="details-content">
            {% render 'product-details' %}
          </div>
        </div>
      {%- endif -%}

    </div>
  </div>