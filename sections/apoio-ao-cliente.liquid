</main>

<style>
  #apoio_ao_cliente_mobile {
    display: none;
    grid-template-rows: max-content 1fr;
    min-height: 85vh;
    position: relative;
  }

  #apoio_ao_cliente_mobile > #close-page-custom {
    position: absolute;
    top: 20px;
    right: 20px;
  }

  #apoio_ao_cliente_mobile > img {
    width: 100%;
    object-fit: cover;
    height: 290px;
  }

  #apoio_ao_cliente_mobile > div {
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    gap: 2rem;
    position: relative;
    top: -2rem;
    background-color: white;
    border-radius: 2rem 2rem 0 0;
    width: 100%;
    padding: 1rem;
    text-align: center;
    justify-items: center;
    align-content: center;
    color: #258439;
  }

  #apoio_ao_cliente_mobile > div > h1 {
    font-size: 20px;
    margin: 0 0 1rem 0;
    line-height: 26px;
  }

  #apoio_ao_cliente_mobile > div > div {
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    justify-items: center;
    font-size: 16px;
    gap: 0.25rem;
  }

  #apoio_ao_cliente_mobile > div > div > #subdescription_text {
    font-size: 12px;
  }

  #apoio_ao_cliente_mobile > div > div > svg {
    width: 20px;
    height: 20px;
  }

  #apoio_ao_cliente_mobile > div > div > a {
    font-weight: 500;
  }

  #apoio_ao_cliente_mobile > div > div:nth-child(4) {
    font-size: 14px;
    color: #818181;
  }

  #apoio_ao_cliente_mobile > div > div > span,
  #apoio_ao_cliente_mobile > div > div > a {
    line-height: 22px;
  }

  @media screen and (max-width: 1000px) {
    #apoio_ao_cliente_mobile {
      display: grid;
    }
  }
</style>
