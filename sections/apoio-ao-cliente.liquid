{% schema %}
{
  "name": "Apoio ao Cliente",
  "settings": [
    {
      "type": "image_picker",
      "id": "selected_image",
      "label": "Selecione a imagem"
    }
  ],
  "presets": [
    {
      "name": "Apoio ao Cliente",
      "category": "contact"
    }
  ]
}
{% endschema %}

<style>
  #apoio_ao_cliente {
    display: grid;
    grid-auto-flow: row;
    grid-auto-rows: max-content;
    grid-template-columns: max-content;
    gap: 3rem;
    padding: 10rem var(--desktop-container-gutter);
    background-image: url({{section.settings.selected_image|img_url:'master'}});
    background-size: cover;
    background-position: center;
  }

  #apoio_ao_cliente > h1 {
    padding: 0;
    margin: 0;
    color: #258439;
    font-size: 3.5rem;
    line-height: normal;
    font-weight: bolder;
  }

  #apoio_ao_cliente > div {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: max-content;
    gap: 3rem;
    background-color: white;
    border-radius: 1rem;
    padding: 3rem 1.5rem;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    align-items: center;
  }

  #apoio_ao_cliente > div > div {
    display: grid;
    grid-auto-flow: row;
    grid-auto-rows: max-content;
    grid-template-columns: max-content;
    gap: 0.5rem;
    color: #258439;
  }

  #apoio_ao_cliente > div > div > * {
    font-size: 1.5rem;
    line-height: normal;
  }

  #apoio_ao_cliente > div > div > a {
    font-weight: bolder;
  }

  #apoio_ao_cliente > div > p {
    font-size: 1.25rem;
    color: #818181 !important;
  }

  @media screen and (max-width: 1599px) and (min-width: 1000px) {
    #apoio_ao_cliente {
      gap: 2rem;
    }

    #apoio_ao_cliente > h1 {
      font-size: 2.5rem;
    }

    #apoio_ao_cliente > div {
      gap: 2rem;
      padding: 2.5rem 1.25rem;
    }

    #apoio_ao_cliente > div > svg {
      scale: 0.8;
    }

    #apoio_ao_cliente > div > div > * {
      font-size: 1rem;
    }

    #apoio_ao_cliente > div > p {
      font-size: 0.95rem;
    }
  }

  @media screen and (min-width: 1499px) {
    #apoio_ao_cliente {
      padding: 10rem 9vw;
    }
  }

  @media screen and (min-width: 2559px) {
    #apoio_ao_cliente {
      padding: 14rem 18vw;
    }
  }

  #apoio_ao_cliente_mobile {
    display: none;
    grid-template-rows: max-content 1fr;
    min-height: 85vh;
    position: relative;
  }

  #apoio_ao_cliente_mobile > #close-page-custom {
    position: absolute;
    top: 20px;
    right: 20px;
  }

  #apoio_ao_cliente_mobile > img {
    width: 100%;
    object-fit: cover;
    height: 290px;
  }

  #apoio_ao_cliente_mobile > div {
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    gap: 2rem;
    position: relative;
    top: -2rem;
    background-color: white;
    border-radius: 2rem 2rem 0 0;
    width: 100%;
    padding: 1rem;
    text-align: center;
    justify-items: center;
    align-content: center;
    color: #258439;
  }

  #apoio_ao_cliente_mobile > div > h1 {
    font-size: 20px;
    margin: 0 0 1rem 0;
    line-height: 26px;
  }

  #apoio_ao_cliente_mobile > div > div {
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    justify-items: center;
    font-size: 16px;
    gap: 0.25rem;
  }

  #apoio_ao_cliente_mobile > div > div > #subdescription_text {
    font-size: 12px;
  }

  #apoio_ao_cliente_mobile > div > div > svg {
    width: 20px;
    height: 20px;
  }

  #apoio_ao_cliente_mobile > div > div > a {
    font-weight: 500;
  }

  #apoio_ao_cliente_mobile > div > div:nth-child(4) {
    font-size: 14px;
    color: #818181;
  }

  #apoio_ao_cliente_mobile > div > div > span,
  #apoio_ao_cliente_mobile > div > div > a {
    line-height: 22px;
  }

  @media screen and (max-width: 1000px) {
    #apoio_ao_cliente_mobile {
      display: grid;
    }

    #apoio_ao_cliente {
      display: none;
    }
  }
</style>

