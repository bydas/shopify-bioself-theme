{% schema %}
{
  "name": "Ebook Block",
  "settings": [
    {
      "type": "text",
      "label": "Título",
      "id": "newsletter_title"
    },
    {
      "type": "richtext",
      "label": "Descrição",
      "id": "newsletter_subtitle"
    },
    {
      "type": "text",
      "label": "Texto do link",
      "id": "btn_text"
    }
  ],
  "presets": [
    {
      "name": "Ebook Block",
      "category": "custom"
    }
  ]
}
{% endschema %}

<style>
  #ebook-block-custom {
    display: grid;
    grid-template-rows: repeat(3, max-content);
    place-items: center;
    padding: 4rem;
    margin: 2rem var(--desktop-container-gutter);
    background-color: #308a36;
    color: white;
    border-radius: 0.65rem;
    gap: 0.8rem;
  }

  #ebook-block-custom > h1,
  #ebook-block-custom > p {
    line-height: normal;
  }

  #ebook-block-custom > h1 {
    font-size: 24px;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  #ebook-block-custom > p {
    font-size: 16px;
    font-weight: 600;
    margin: 0;
    padding: 0;
    text-align: center;
    max-width: 60rem;
  }

  #ebook-block-custom > a {
    font-size: 16px;
    font-weight: bold;
    margin: 0;
    padding: 0.65rem 2rem;
    background-color: #FFBB12;
    text-transform: uppercase;
    text-align: center;
    border-radius: 0.65rem;
    color: black;
    margin-top: 1rem;
    transition: opacity 0.15s;
  }

  #ebook-block-custom > a:hover {
    opacity: 0.8;
  }

  @media screen and (min-width: 1499px) {
    #ebook-block-custom {
      margin: 2rem 9vw;
      padding: 2rem;
    }
  }

  @media screen and (min-width: 2559px) {
    #ebook-block-custom {
      margin: 2rem 18vw;
    }
  }

  @media screen and (max-width: 1000px) {
    #ebook-block-custom {
      padding: 2rem;
      margin: 1rem var(--mobile-container-gutter);
    }

    #ebook-block-custom > h1 {
      font-size: 18px;
    }

    #ebook-block-custom > p {
      font-size: 14px;
    }

    #ebook-block-custom > a {
      font-size: 14px;
      padding: 0.35rem 2rem;
    }
  }
</style>

<section id="ebook-block-custom">
  {% unless section.settings.newsletter_title == blank %}
    <h1>{{ section.settings.newsletter_title }}</h1>
  {% endunless %}

  {% unless section.settings.newsletter_subtitle == blank %}
    {{ section.settings.newsletter_subtitle }}
  {% endunless %}

  {% unless section.settings.btn_text == blank %}
    <a href="#" class="go_to_ebook">{{ section.settings.btn_text }}</a>
  {% endunless %}
</section>
