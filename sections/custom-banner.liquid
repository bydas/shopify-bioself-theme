<style>
  .custom-banner {
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    gap: 1rem;
    margin: 4rem var(--desktop-container-gutter);
  }

  .custom-banner a img {
    width: 100%;
    max-height: 1080px;
    object-fit: cover;
    border-radius: 1rem;
  }

  @media screen and (min-width: 1499px) {
    .custom-banner {
      margin: 4rem 9vw;
    }
  }

  @media screen and (min-width: 2559px) {
    .custom-banner {
      margin: 4rem 18vw;
    }
  }

  @media screen and (max-width: 1000px) {
    .custom-banner {
      margin: 2rem var(--mobile-container-gutter);
    }

    .custom-banner a img {
      max-height: 600px;
      border-radius: 0.65rem;
    }
  }
</style>

<section class="custom-banner">
  {% if section.settings.image_mobile and section.settings.image_desktop %}
    <a href="{{ section.settings.link | default: '#' }}">
      <picture>
        <source media="(max-width: 768px)" srcset="{{ section.settings.image_mobile | img_url: 'master' }}">
        <img
          src="{{ section.settings.image_desktop | img_url: 'master' }}"
          alt="{{ section.settings.image_desktop.alt }}"
          width="100%"
          height="100%"
          loading="eager"
        >
      </picture>
    </a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Banner Customizado",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Imagem de fundo desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Imagem de fundo mobile"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link do bloco"
    }
  ],
  "presets": [
    {
      "name": "Banner Customizado",
      "category": "custom"
    }
  ]
}
{% endschema %}
