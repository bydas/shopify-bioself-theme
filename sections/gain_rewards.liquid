{% schema %}
{
  "name": "Biopoints Gain Rewards",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título da secção",
      "default": "Ganha pontos e garante recompensas"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descrição da secção"
    }
  ],
  "blocks": [
    {
      "type": "custom",
      "name": "Recompensa",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_icon",
          "label": "Icone para desktop"
        },
        {
          "type": "image_picker",
          "id": "mobile_icon",
          "label": "Icone para mobile"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Descrição"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Biopoints Gain Rewards",
      "category": "custom"
    }
  ]
}
{% endschema %}

<section id="biopoints_gain_rewards">
  {% unless section.settings.title == blank %}
    <h1>{{ section.settings.title }}</h1>
  {% endunless %}

  {% unless section.settings.description == blank %}
    {{ section.settings.description }}
  {% endunless %}

  {% if section.blocks.size > 0 %}
    <ul>
      {% for block in section.blocks %}
        <li>
          {% unless block.settings.desktop_icon == blank and block.settings.mobile_icon == blank %}
            <picture>
              <source
                media="(max-width: 1000px)"
                srcset="{{ block.settings.mobile_icon | img_url: 'master' }}"
              >

              <img
                src="{{ block.settings.desktop_icon | img_url: 'master' }}"
                alt="{{ block.settings.title }}"
              >
            </picture>
          {% endunless %}

          {% unless block.settings.title == blank %}
            <h2>{{ block.settings.title }}</h2>
          {% endunless %}

          {% unless block.settings.description == blank %}
            {{ block.settings.description }}
          {% endunless %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</section>

<style>
  #biopoints_gain_rewards {
    display: grid;
    grid-auto-flow: row;
    grid-auto-rows: max-content;
    gap: 2rem;
    margin: 8rem var(--desktop-container-gutter) 2rem var(--desktop-container-gutter);
  }

  @media screen and (min-width: 1499px) {
    #biopoints_gain_rewards {
      margin: 8rem 9vw 2rem 9vw;
    }
  }

  @media screen and (min-width: 2559px) {
    #biopoints_gain_rewards {
      margin: 8rem 18vw 2rem 18vw;
    }
  }

  #biopoints_gain_rewards > * {
    line-height: normal;
  }

  #biopoints_gain_rewards > h1 {
    padding: 0;
    margin: 0;
    font-size: 42px;
    font-weight: 900 !important;
    text-align: center;
    text-transform: uppercase;
  }

  #biopoints_gain_rewards > p {
    padding: 0;
    margin: 0;
    font-weight: 400 !important;
    font-size: 18px;
    text-align: center;
  }

  #biopoints_gain_rewards > ul {
    list-style-type: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(490px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  #biopoints_gain_rewards > ul > li {
    display: grid;
    grid-auto-flow: row;
    grid-auto-rows: max-content;
    place-items: center;
    padding: 1.5rem;
    border-radius: 0.5rem;
    border: 1px solid #258439;
  }

  #biopoints_gain_rewards > ul > li > h2 {
    padding: 0 !important;
    font-size: 18px;
    font-weight: 900 !important;
    text-align: center;
    text-transform: uppercase;
    margin: 1.5rem 0 0.5rem 0;
  }

  #biopoints_gain_rewards > ul > li > p {
    padding: 0;
    margin: 0;
    font-size: 16px;
    font-weight: 900 !important;
    text-align: center;
    color: #258439;
  }

  @media screen and (min-width: 1000px) {
    #biopoints_gain_rewards > p,
    #biopoints_gain_rewards > h1{
      justify-self: center;
    }

    #biopoints_gain_rewards > p {
      max-width: 60dvw;
    }

    #biopoints_gain_rewards > h1 {
      max-width: 40dvw;
    }
  }

  @media screen and (max-width: 1599px) and (min-width: 1000px) {
    #biopoints_gain_rewards > h1 {
      font-size: 28px;
    }

    #biopoints_gain_rewards > p {
      font-size: 16px;
    }

    #biopoints_gain_rewards > ul {
      grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    }

    #biopoints_gain_rewards > ul > li {
      padding: 1rem;
    }

    #biopoints_gain_rewards > ul > li > picture > img {
      scale: 0.75;
    }

    #biopoints_gain_rewards > ul > li > h2 {
      font-size: 16px;
      margin: 1rem 0 0.5rem 0;
    }

    #biopoints_gain_rewards > ul > li > p {
      font-size: 14px;
    }
  }

  @media screen and (max-width: 1000px) {
    #biopoints_gain_rewards {
      gap: 1rem;
      margin: 4rem var(--mobile-container-gutter) 2rem var(--mobile-container-gutter);
    }

    #biopoints_gain_rewards > h1 {
      font-size: 21px;
    }

    #biopoints_gain_rewards > p {
      font-size: 16px;
    }

    #biopoints_gain_rewards > ul {
      grid-template-columns: 1fr;
      grid-auto-flow: row;
      grid-auto-rows: max-content;
      gap: 1rem;
      margin-top: 2rem;
    }

    #biopoints_gain_rewards > ul > li {
      padding: 1rem;
    }

    #biopoints_gain_rewards > ul > li > h2 {
      font-size: 16px;
      margin: 1rem 0 0.25rem 0;
    }

    #biopoints_gain_rewards > ul > li > p {
      font-size: 15px;
    }
  }
</style>
