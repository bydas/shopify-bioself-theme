                          type="checkbox"
                          id="accept_gdpr"
                          name="accept_gdpr"
                          value="Accept GDPR">
                        <label
                          for="newsletter[contact][email]"
                          class="rte newsletter_gdpr"
                          required>{{ block.settings.text_gdpr }}</label>
                      </div>
                    {%- endif -%}
                  </div>
  
  
  
                  <button type="submit" class="form__submit form__submit--tight button button--primary button--full">{{ 'home_page.newsletter.submit' | t }}</button>
                {%- endif -%}
              {%- endform -%}
  
              {%- if block.settings.subtext != blank -%}
                <p class="newsletter__text">{{ block.settings.subtext | escape }}</p>
              {%- endif -%}
            </div>
          </div>
  
          {%- when 'featured_posts' -%}
          <p class="article-sub-title heading h2">Artigos recentes</p>
          <div class="latest-articles-sidebar">
            {%- for article in blog.articles limit: 4 -%}
              <div class="latest-article-img">
                <a href="{{ article.url }}">
                  {%- capture supported_sizes -%}
                    {%- render 'image-size', sizes: '200,300,400,500,600,700,800,900,1000,1200,1400', image: article.image -%}{%- endcapture -%}
                  {%- assign image_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  {%- assign blog_sidebar_image = article.metafields.article.blog_sidebar_image.value | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  
              {% if article.metafields.article.blog_sidebar_image.value != blank %}
