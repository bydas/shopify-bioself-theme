              class="blog-sidebar__item blog-sidebar__item--social"
              id="block-{{ block.id }}"
              {{ block.shopify_attributes }}>
              {%- if block.settings.title != blank -%}
                <p class="blog-sidebar__block-title heading h3">{{ block.settings.title | escape }}</p>
