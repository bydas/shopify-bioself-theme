{% assign path_block = section.blocks | where: 'type', 'path' %}

<style>
  .servico-know__path-list-mobile {
    display: none;  
  }
  
  .servico-know {
    position: relative;
    height: 1310px;
    margin-bottom: 4rem;
  }

  .servico-know__container {
    position: relative;
    height: 100%;
    margin: 0 var(--desktop-container-gutter);
  }

  @media screen and (min-width: 1499px) {
    .servico-know__container {
      margin: 0 9vw;
    }
  }

  @media screen and (min-width: 2559px) {
    .servico-know__container {
      margin: 0 18vw;
    }
  }

  .servico-know__content {
    position: absolute;
    z-index: 1;
    display: grid;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    gap: 1rem;
    padding: 1.5rem 12rem 1.5rem 1.5rem;
    border-radius: 1rem;
    background-color: white;
    box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    max-width: 50%;
  }

  .servico-know__title h1 {
    padding: 0;
    margin: 0;
    font-size: 2rem;
    font-weight: 900 !important;
  }

  .servico-know__description p,
  servico-know__path-item p {
    padding: 0;
    margin: 0;
    font-size: 1rem;
    font-weight: 500 !important;
  }

  .servico-know__path-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    bottom: -2rem;
    list-style-type: none;
    position: absolute;
    left: 0;
    right: 0;
  }

  .servico-know__item-title {
    padding: 0;
    margin: 0;
    font-size: 1.25rem;
  }

  .servico-know__path-item {
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    align-items: center;
    text-align: center;
    padding: 1.5rem;
    background-color: #258439;
    border-radius: 1rem;
    justify-items: center;
    color: white;
  }

  .servico-know__path-item:nth-child(even) {
    transform: translateY(-25px);
    height: max-content;
  }

  .servico-know__path-item img {
    margin-bottom: 2rem;
    object-fit: contain;
  }

  @media screen and (max-width: 1599px) and (min-width: 1000px) {
    .servico-know {
      height: 1000px;
    }

    .servico-know__content {
      top: 35%;
    }
  
    .servico-know__title h1 {
      font-size: 1.5rem;
    }
  
    .servico-know__description p,
    .servico-know__path-item p {
      font-size: 0.875rem;
    }
  
    .servico-know__item-title {
      font-size: 1rem;
    }

    .servico-know__path-item img {
      width: 55px;
      height: 55px;
    }
  }

  @media screen and (max-width: 1000px) {
    .servico-know__path-list {
      display: none;
    }

    .servico-know__path-list-mobile {
      display: grid;
    }

    .servico-know {
      height: 250px;
    }

    .servico-know__title h1 {
      font-size: 1.25rem;
    }
  
    .servico-know__description p,
    .servico-know__path-item p {
      font-size: 1rem;
    }

    .servico-know__content {
      padding: 1rem;
      top: 40%;
      left: unset;
      right: 0;
      transform: unset;
    }
  }
</style>

<section
  id="servico_know_custom"
  class="servico-know lazy-bg"
  data-bg="{{ section.settings.bg_img | image_url: width: '1923', height: '1310' }}"
  style="background-size: cover; background-position: center;"
>
  <div class="servico-know__container">
    {% unless section.settings.title == blank %}
      <div class="servico-know__content">
        <div class="servico-know__title">
          {{ section.settings.title }}
        </div>
  
        {% if section.settings.description != blank %}
          <div class="servico-know__description">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endunless %}

    {% render 'path-list', class_name: 'servico-know__path-list', path_block: path_block  %}
  </div>

  {% render 'path-list', class_name: 'servico-know__path-list-mobile', path_block: path_block  %}
</section>

