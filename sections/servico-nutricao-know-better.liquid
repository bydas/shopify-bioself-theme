{% assign path_block = section.blocks | where: 'type', 'path' %}

<style>
  #servico_know_custom {
    display: grid;
    grid-template-rows: repeat(2, max-content);
    gap: 2rem;
    padding: 2rem var(--desktop-container-gutter);
    align-content: end;
    height: 1310px;
  }

  @media screen and (min-width: 1499px) {
    #servico_know_custom {
      padding: 4rem 9vw;
    }
  }

  @media screen and (min-width: 2559px) {
    #servico_know_custom {
      padding: 4rem 18vw;
    }
  }

  #servico_know_custom > div {
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    gap: 1rem;
    border-radius: 1rem;
    background-color: white;
    padding: 2rem 12rem 2rem 2rem;
    width: max-content;
  }

  #servico_know_custom > div > div > h1  {
    margin: 0;
    padding: 0;
    font-size: 3rem;
    font-weight: 900 !important;
    line-height: normal;
  }

  #servico_know_custom > div > div > p {
    margin: 0;
    padding: 0;
    font-size: 1.25rem;
    font-weight: 500;
    line-height: normal;
  }

  #servico_know_custom > ul {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(3, 1fr);
    list-style-type: none;
    justify-content: space-between;
  }

  #servico_know_custom > ul > li {
    padding: 2rem;
    background-color: #258439;
    color: white;
    border-radius: 1rem;
    margin: 0;
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    gap: 1rem;
    justify-items: center;
    text-align: center;
  }

  #servico_know_custom > ul > li > h1 {
    margin: 0;
    padding: 0;
    font-size: 1.5rem;
    font-weight: 900 !important;
    line-height: normal;
  }

  #servico_know_custom > ul > li > p {
    margin: 0;
    padding: 0;
    font-size: 1rem;
    font-weight: 500 !important;
    line-height: normal;
  }
</style>

<section
  id="servico_know_custom"
  class="lazy-bg"
  data-bg="{{ section.settings.bg_img | image_url: width: '1923', height: '1310' }}"
  style="background-size: cover; background-position: center;"
>
  {% unless section.settings.title == blank %}
    <div>
      <div>
        <h1>{{ section.settings.title }}</h1>
      </div>

      {% if section.settings.description != blank %}
        <div>
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>
  {% endunless %}

  {% unless path_block.size == 0 %}
    <ul>
      {% for p in path_block %}
        <li>
          {% unless p.settings.icon == blank %}
            <img
              src="{{ p.settings.icon | image_url: width: 80, height: 80 }}"
              alt="{{ forloop.index }}-icon"
              width="80"
              height="80"
            >
          {% endunless %}

          {% unless p.settings.title == blank %}
            <h1>{{ p.settings.title }}</h1>
          {% endunless %}

          {% unless p.settings.description == blank %}
            {{ p.settings.description }}
          {% endunless %}
        </li>
      {% endfor %}
    </ul>
  {% endunless %}
</section>

{% schema %}
{
  "name": "Servico Nutricao Know",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Imagem de Fundo"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descrição"
    }
  ],
  "blocks": [
    {
      "type": "path",
      "name": "Percurso",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Ícone"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Descrição"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Servico Nutricao Know",
      "category": "custom"
    }
  ]
}
{% endschema %}
