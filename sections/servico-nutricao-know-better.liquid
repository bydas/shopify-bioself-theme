{% assign path_block = section.blocks | where: 'type', 'path' %}

<style>
  #servico_know_custom {
    position: relative;
  }

  #servico_know_custom > div {
    position: absolute;
    left: 0;
    top: 0;
    transform: translate(-50%, -50%);
    background-color: white;
    padding: 2rem 8rem 2rem 2rem;
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    gap: 2rem;
  }
</style>

<section
  id="servico_know_custom"
  class="lazy-bg"
  data-bg="{{ section.settings.bg_img | image_url: width: '1923', height: '1310' }}"
  style="background-size: cover; background-position: center;"
>
  {% unless section.settings.title == blank %}
    <div>
      <div>
        <h1>{{ section.settings.title }}</h1>
      </div>

      {% if section.settings.description != blank %}
        <div>
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>
  {% endunless %}

  {% unless path_block.size == 0 %}
    <ul>
      {% for p in path_block %}
        <li>
          {% unless p.settings.icon == blank %}
            <img
              src="{{ p.settings.icon | image_url: width: 70, height: 70 }}"
              alt="{{ forloop.index }}-icon"
              width="70"
              height="70"
            >
          {% endunless %}

          {% unless p.settings.title == blank %}
            <h1>{{ p.settings.title }}</h1>
          {% endunless %}

          {% unless p.settings.description == blank %}
            {{ p.settings.description }}
          {% endunless %}
        </li>
      {% endfor %}
    </ul>
  {% endunless %}
</section>

{% schema %}
{
  "name": "Servico Nutricao Know",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Imagem de Fundo"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descrição"
    }
  ],
  "blocks": [
    {
      "type": "path",
      "name": "Percurso",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Ícone"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Descrição"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Servico Nutricao Know",
      "category": "custom"
    }
  ]
}
{% endschema %}
