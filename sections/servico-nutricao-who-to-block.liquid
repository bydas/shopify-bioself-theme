<style>
  #servico_who_custom {
    display: grid;
    grid-template-rows: repeat(2, max-content);
    gap: 1rem;
    border: 1px solid #258439;
    border-radius: 1rem;
    text-align: center;
    margin: 2rem var(--desktop-container-gutter);
    padding: 2rem;
  }

  @media screen and (min-width: 1499px) {
    #servico_who_custom {
      margin: 2rem 9vw;
    }
  }

  @media screen and (min-width: 2559px) {
    #servico_who_custom {
      margin: 2rem 18vw;
    }
  }

  #servico_who_custom > h1 {
    margin: 0;
    padding: 0;
    font-size: 2rem;
    font-weight: 900 !important;
    line-height: normal;
  }

  #servico_who_custom > div {
    display: grid;
    grid-auto-rows: max-content;
    grid-auto-flow: row;
    gap: 1rem;
  }

  #servico_who_custom > div > p {
    margin: 0;
    padding: 0;
    font-size: 1.25rem;
    font-weight: 500 !important;
    line-height: normal;
  }

  @media screen and (max-width: 1599px) and (min-width: 1000px) {
    #servico_who_custom > h1 {
      font-size: 1.5rem;
    }

    #servico_who_custom > div > p {
      font-size: 0.875rem;
    }
  }

  @media screen and (max-width: 1000px) {
    #servico_who_custom {
      margin: 0 var(--mobile-container-gutter) 2rem var(--mobile-container-gutter);
    }

    #servico_who_custom > h1 {
      font-size: 1.25rem;
    }

    #servico_who_custom > div > p {
      font-size: 1rem;
    }
  }
</style>

<section id="servico_who_custom">
  {% if section.settings.title %}
    <h1>{{ section.settings.title }}</h1>
  {% endif %}

  {% if section.settings.description %}
    <div>{{ section.settings.description }}</div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Servico Nutricao Who",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descrição"
    }
  ],
  "presets": [
    {
      "name": "Servico Nutricao Who",
      "category": "block"
    }
  ]
}
{% endschema %}
