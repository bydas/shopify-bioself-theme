      >
        {% if section.settings.selected_product_image %}
          <img
            loading="lazy"
            src="{{ section.settings.selected_product_image | img_url: 'master' }}"
            width="80px"
            height="100%"
          >
        {% else %}
          <img
            loading="lazy"
            src="{{ section.settings.selected_product.featured_image | img_url: 'master' }}"
            width="80px"
            height="100%"
          >
        {% endif %}

        <div>
          <h1>{{ section.settings.selected_product.title }}</h1>

          <div>
            <span>{{ section.settings.selected_product.compare_at_price | money }}</span>

            <span>{{ section.settings.selected_product.price | money }}</span>
          </div>
        </div>
      </a>
    {% endif %}

    {% assign collection = collections[section.settings.collection] %}
    {% if collection and collection.products.size > 0 %}
      <ul>
        <div>
          {% for product in collection.products limit: 4 %}
            {%- render 'product-item-2', product: product, show_add_to_cart: true -%}
          {% endfor %}
        </div>
      </ul>
    {% endif %}
  </div>
</section>
