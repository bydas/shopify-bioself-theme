<script>
  const sectionServico = document.querySelector('#servico_form_custom');

  if (sectionServico) {
    const formServico = sectionServico.querySelector('form');
    let isSubmitting = false; // Prevenir m√∫ltiplos envios

    // --- INTERCEPTA SUBMISS√ÉO DO FORMUL√ÅRIO ---
    formServico?.addEventListener('submit', async function (e) {
      e.preventDefault();

      // Prevenir m√∫ltiplos envios
      if (isSubmitting) return;
      isSubmitting = true;

      const submitButton = formServico.querySelector('button[type="submit"]');
      const originalText = submitButton.textContent;

      try {
        // Feedback visual
        submitButton.textContent = 'Enviando...';
        submitButton.disabled = true;

        // Criar FormData
        const formData = new FormData(formServico);

        // Adicionar a√ß√£o para o backend identificar
        formData.append('action', 'send_servico_form_email');

        // Primeiro: Enviar para seu endpoint
        const response = await fetch('https://bioself.apps.bydas.com/', {
          method: 'POST',
          body: formData,
        });

        // Verificar se o envio foi bem-sucedido
        if (!response.ok) {
          throw new Error('Falha no envio');
        }

        // Segundo: Disparar o gtag de convers√£o
        if (typeof gtag === 'function') {
          gtag('event', 'conversion', {
            send_to: 'AW-342178610/kdSFCM-NhLEbELL2lKMB',
          });
        }

        // Terceiro: Mostrar modal imediatamente (n√£o depender de localStorage)
        showSuccessModal();

        // Quarto: Opcionalmente fazer submit real do formul√°rio Shopify
        // Se voc√™ quiser que o Shopify tamb√©m processe o formul√°rio:
        // formServico.submit();

        // Resetar formul√°rio ap√≥s sucesso
        setTimeout(() => {
          formServico.reset();
        }, 500);
      } catch (error) {
        console.error('Erro ao enviar formul√°rio:', error);
        alert('Erro ao enviar o formul√°rio. Tente novamente.');
      } finally {
        // Restaurar bot√£o
        submitButton.textContent = originalText;
        submitButton.disabled = false;
        isSubmitting = false;
      }
    });

    // --- FUN√á√ÉO PARA MOSTRAR MODAL ---
    function showSuccessModal() {
      const servicoModal = document.getElementById('servico_modal_post_submitted');
      const overlayModal = document.getElementById('modal_overlay');

      // Criar overlay se n√£o existir
      if (!overlayModal) {
        const newOverlay = document.createElement('div');
        newOverlay.id = 'modal_overlay';
        newOverlay.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
        z-index: 1002;
        display: block;
      `;
        document.body.appendChild(newOverlay);

        // Fechar modal ao clicar no overlay
        newOverlay.addEventListener('click', function () {
          closeModal();
        });
      } else {
        overlayModal.style.display = 'block';
      }

      // Mostrar modal
      if (servicoModal) {
        servicoModal.style.opacity = '1';
        servicoModal.style.visibility = 'visible';
        servicoModal.style.position = 'fixed';
        servicoModal.style.zIndex = '1003';

        // Adicionar evento de fechar
        const escapeIconModalServico = document.getElementById('escape_servico_modal');
        if (escapeIconModalServico) {
          // Remover event listeners antigos
          const newEscapeIcon = escapeIconModalServico.cloneNode(true);
          escapeIconModalServico.parentNode.replaceChild(newEscapeIcon, escapeIconModalServico);

          newEscapeIcon.addEventListener('click', closeModal);
        }
      }

      // Scroll para o formul√°rio
      sectionServico.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    function closeModal() {
      const servicoModal = document.getElementById('servico_modal_post_submitted');
      const overlayModal = document.getElementById('modal_overlay');

      if (servicoModal) {
        servicoModal.style.opacity = '0';
        servicoModal.style.visibility = 'hidden';
      }

      if (overlayModal) {
        overlayModal.style.display = 'none';
      }
    }

    // --- VERIFICAR SE J√Å FOI ENVIADO (para quando a p√°gina recarrega) ---
    // Esta parte s√≥ √© necess√°ria se voc√™ quiser mostrar o modal ap√≥s recarregar a p√°gina
    // Pode remover se n√£o for necess√°rio
  }
</script>

