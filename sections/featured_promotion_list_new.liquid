<section class="section mosaic-section {% if section.settings.show_only_mobile != blank %} hidden-lap-and-up {% endif %} {% if section.settings.show_only_desktop != blank %} hidden-pocket {% endif %}" data-section-id="{{ section.id }}" data-section-type="mosaic">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h3">{{ section.settings.title | escape }}</h2>
      </header>
    {%- endif -%}

    <div class="featured_promotions_container">
      {%- assign collection_1 = collections[section.settings.collection_1] -%}
      <div class="featured_promotions_main"
      style="background-size: cover !important; background: linear-gradient(0deg, rgb(110 50 13 / 60%), rgb(255 255 255 / 0%)), url({{ section.settings.image | img_url: '400x' }});">
          <button class="featured_promotions_buttons"><a href="{{ collection_1.url }}">Comprar</a></button>
      </div>
      <div class="featured_promotions_secondary">
        {%- assign collection_2 = collections[section.settings.collection_2] -%}
        <div class="featured_promotion_secondary_item"
        style="background-size: cover !important; background: linear-gradient(0deg, rgb(90 50 68 / 60%), rgb(255 255 255 / 0%)), url({{ section.settings.image_2 | img_url: '400x' }});">
          <button class="featured_promotions_buttons"><a href="{{ collection_2.url }}">Comprar</a></button>
        </div>

        {%- assign collection_3 = collections[section.settings.collection_3] -%}
        <div class="featured_promotion_secondary_item"
        style="background-size: cover !important; background: linear-gradient(0deg, rgb(12 2 1 / 60%), rgb(255 255 255 / 0%)), url({{ section.settings.image_3 | img_url: '400x' }});">
          <button class="featured_promotions_buttons"><a href="{{ collection_3.url }}">Comprar</a></button>
        </div>
      </div>

    </div>
  </div>
</section>


<style>
#shopify-section-{{ section.id }} .featured_promotions_container {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    column-gap: 15px;
}  

#shopify-section-{{ section.id }} .featured_promotions_main {
  height: 378px;
  border-radius: 15px;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

#shopify-section-{{ section.id }} .featured_promotion_secondary_item {
  height: 180px;
  border-radius: 15px;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

#shopify-section-{{ section.id }} .featured_promotion_secondary_item:first-child {
    margin-bottom: 18px;
}

#shopify-section-{{ section.id }} button.featured_promotions_buttons {
  height: 52px;
  width: 180px;
  background: rgba(255,255,255,0.5);
  border-radius: 15px;
  margin-right: 17px;
  margin-bottom: 22px;
  color: #fff;
  font-size: 20px;
  font-weight: 700;
  text-transform: uppercase;
  font-family: 'RedHatDisplayBold';
}

@media screen and (max-width: 768px) {
  #shopify-section-{{ section.id }} .featured_promotions_container {
    display: grid;
    grid-template-rows: 1fr;
    grid-template-columns: 1fr;
    row-gap: 15px;
  }  

  #shopify-section-{{ section.id }} button.featured_promotions_buttons { 
    height: 26px;
    width: 90px;
    font-size: 12px;
  }

  #shopify-section-{{ section.id }} .featured_promotion_secondary_item {
    height: 260px;
  }

  #shopify-section-{{ section.id }} .featured_promotion_secondary_item:nth-child(2) {
    height: 130px;
  }
}
</style>

